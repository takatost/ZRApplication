<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/order_detail_header_height"
        android:textSize="@dimen/order_detail_header_text_size"
        android:drawableLeft="@drawable/fork_normal"
        android:layout_marginLeft="@dimen/order_detail_header_text_magin"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/arrows"
        android:gravity="center"
        android:drawablePadding="@dimen/order_detail_header_text_drawable_padding"
        tools:text="订单编号 886621"
        android:id="@+id/id_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/order_detail_header_height"
        tools:text="交易成功"
        android:textColor="@android:color/holo_red_light"
        android:textSize="@dimen/order_detail_header_text_size"
        android:layout_centerVertical="true"
        android:id="@+id/status_text"
        android:gravity="center"
        android:layout_marginRight="@dimen/order_detail_header_text_magin"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey" />


</RelativeLayout>